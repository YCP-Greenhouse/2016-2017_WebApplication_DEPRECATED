<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>listener.Weather</listener-class>
    </listener>

    <!-- Servlets -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlet.IndexServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DocumentationServlet</servlet-name>
        <servlet-class>servlet.DocumentationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SettingsServlet</servlet-name>
        <servlet-class>servlet.SettingsServlet</servlet-class>
    </servlet>

    <!-- API Servlets -->
    <servlet>
        <servlet-name>StateAPI</servlet-name>
        <servlet-class>api.StateAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SensorAPI</servlet-name>
        <servlet-class>api.SensorAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AutomationAPI</servlet-name>
        <servlet-class>api.AutomationAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ErrorAPI</servlet-name>
        <servlet-class>api.ErrorAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WeatherAPI</servlet-name>
        <servlet-class>api.WeatherAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AveragesAPI</servlet-name>
        <servlet-class>api.AveragesAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ScheduleAPI</servlet-name>
        <servlet-class>api.ScheduleAPI</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ContactAPI</servlet-name>
        <servlet-class>api.ContactAPI</servlet-class>
    </servlet>



    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/testing</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DocumentationServlet</servlet-name>
        <url-pattern>/documentation</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SettingsServlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <!-- API mappings -->
    <servlet-mapping>
        <servlet-name>StateAPI</servlet-name>
        <url-pattern>/api/state</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SensorAPI</servlet-name>
        <url-pattern>/api/sensors</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AutomationAPI</servlet-name>
        <url-pattern>/api/automation</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorAPI</servlet-name>
        <url-pattern>/api/error</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WeatherAPI</servlet-name>
        <url-pattern>/api/weather</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AveragesAPI</servlet-name>
        <url-pattern>/api/averages</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ScheduleAPI</servlet-name>
        <url-pattern>/api/schedule</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ContactAPI</servlet-name>
        <url-pattern>/api/contact</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>